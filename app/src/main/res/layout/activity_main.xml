<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="contador.cursoandroid.com.contador.MainActivity">

    <Button
        android:id="@+id/botao_conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTA +1"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="monospace"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="417dp"
        android:layout_below="@+id/texto_conta_id"
        android:layout_alignLeft="@+id/botao_tira"
        android:layout_alignStart="@+id/botao_tira"
        android:layout_marginTop="81dp" />

    <Button
        android:id="@+id/botao_tira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:text="CONTA -1"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="monospace"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="417dp" />

    <TextView
        android:id="@+id/texto_conta_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:text="0"
        android:textSize="120sp" />
</RelativeLayout>
